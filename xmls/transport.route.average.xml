<routes>
    <vTypeDistribution id="typedist1">
        <vType id="type1" accel="0.8" length="5" maxSpeed="70" probability="0.9"/>
    </vTypeDistribution>

    <routeDistribution id="routedist_up_down">
        <route id="route_up" color="1,0,0" edges="bottom0A0 A0top0" probability="0.4"/>
        <route id="route_down" color="0,1,0" edges="top0A0 A0bottom0" probability="0.4"/>
        <route id="route_up_left" color="0,0,1" edges="bottom0A0 A0left0" probability="0.1"/>
        <route id="route_down_right" color="1,0,1" edges="top0A0 A0right0" probability="0.1"/>
    </routeDistribution>
    <routeDistribution id="routedist_left_right">
        <route id="route_right" color="1,0,0" edges="left0A0 A0right0" probability="0.4"/>
        <route id="route_left" color="0,1,0" edges="right0A0 A0left0" probability="0.4"/>
        <route id="route_right_up" color="0,0,1" edges="left0A0 A0top0" probability="0.1"/>
        <route id="route_left_down" color="0,0,1" edges="right0A0 A0bottom0" probability="0.1"/>
    </routeDistribution>

    <flow id="f0" type="typedist1" route="routedist1" depart="0" color="1,1,0" probability="0.3"/>
    <flow id="f1" type="typedist1" route="routedist2" depart="0" color="0,1,1" probability="0.2"/>

</routes>
